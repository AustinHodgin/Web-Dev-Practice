<% include ../partials/header %>

    <div class="row">
        <div class="col-md-3">
            
           
        </div>
        <div class="col-md-9">


           
            <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body ">
                <h4 class="float-right">$<%= campground.price %>/night</h4>
                <h5 class="card-title"><%= campground.name %></h5>
                <p>
                    <em> Submitted By: <%= campground.author.username %> </em> 
                 </p>
                <hr>
                <p class="card-text"><%= campground.description %></p>
                
                
                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                       <button class="btn btn-danger">Delete</button>
                    </form>
                <% } %>
            </div>
            </div>

            <div class="card">
                    <p class="mt-3 mr-3"><a class="btn btn-success float-right" href="/campgrounds/<%= campground._id %>/comments/new">Leave a Review</a> </p>
                    <hr>
                <div class="card-body ">
                        
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <span class="float-right">10 days ago</span>
                                <p class="card-tittle"><strong><%= comment.author.username %></strong> </p>
                                <div class="float-right">
                                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                            <a href="/campgrounds/<%=campground._id %>/comments/<%= comment._id %>/edit" class="btn btn-sm btn-warning float-right">Edit</a>
                                            <form class="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                                                <button class="btn btn-sm btn-danger float-right">Delete</button>
                                            </form>
                                        <% } %> 
                                    </div>
                                <p class="card-text"><%= comment.text %></p>
                                

                                
                            </div>
                        </div>
                    <% }); %>
            </div>
        </div>
    </div>








<% include ../partials/footer %>